// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Atlit {
  id          Int    @id @default(autoincrement())
  nama        String
  alamat      String
  ttl         String
  telephone   String
  gender      String
  cabor_id    Int
  cabor       Cabor    @relation(fields: [cabor_id], references: [id])
}

model Cabor {
  id          Int     @id @default(autoincrement())
  nama        String
  atlit       Atlit[]
  pelatih     Pelatih[]
  wasit       Wasit[]  
}

model Pelatih {
  id          Int   @id @default(autoincrement())
  nama        String
  alamat      String
  ttl         String
  telephone   String
  gender      String
  keterangan  String
  cabor_id    Int
  cabor       Cabor    @relation(fields: [cabor_id], references: [id])
}

model Wasit {
  id          Int   @id @default(autoincrement())
  nama        String
  alamat      String
  ttl         String
  telephone   String
  gender      String
  keterangan  String
  cabor_id    Int
  cabor       Cabor    @relation(fields: [cabor_id], references: [id])
}
